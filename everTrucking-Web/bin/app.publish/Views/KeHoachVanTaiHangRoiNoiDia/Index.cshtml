<h1 class="mt-3 mb-3">Kế hoạch vận tải hàng rời nội địa</h1>
<div class="form-group">


    <div class="form-group row">
        <div class="col-sm-6">
            <label>Từ ngày</label>
            <div class="input-group date" id="TuNgay">
                <input class="form-control ngay-vn" placeholder="dd/mm/yyyy" id="txtTuNgay" />
                <div class="input-group-append">
                    <span class="input-group-text">
                        <i class="fa fa-calendar"></i>
                    </span>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <label>Đến ngày</label>
            <div class="input-group date" id="DenNgay">
                <input class="form-control ngay-vn" placeholder="dd/mm/yyyy" id="txtDenNgay" />
                <div class="input-group-append">
                    <span class="input-group-text">
                        <i class="fa fa-calendar"></i>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <button type="button" class="btn btn-default btn-success mb-3" style="background: #4e73df" onclick="loadData()">Tìm kiếm</button>
    <a type="button" class="btn btn-default btn-success mb-3" style="background: #4e73df" href="/KeHoachVanTaiHangRoiNoiDia/DownloadExcelDocument">Xuất Excel</a>
    <button type="button" onclick="clearTextBox()" class="btn btn-primary mb-3" data-toggle="modal" data-target="#frmKeHoachVanTaiUpdate" data-backdrop="static" data-keyboard="false"> <i class="fa fa-plus"></i> Thêm mới</button>
</div>


<div class="table-responsive">
    <table class="table table-bordered" id="tblKeHoachVanTai">
        <thead>
            <tr>
                <th>Số</th>
                <th>Ngày lập</th>
                <th>Khách hàng</th>
                <th>Địa điểm đóng hàng</th>
                <th>Ngày đóng hàng</th>
                <th>Địa điểm trả hàng</th>
                <th>Ngày trả hàng</th>
                <th>Người tạo</th>
                <th style="">Thao tác</th>
            </tr>
        </thead>
