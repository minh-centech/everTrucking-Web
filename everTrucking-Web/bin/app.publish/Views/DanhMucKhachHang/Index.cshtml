<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div>
            <h6 class="m-0 font-weight-bold text-primary">
                CHI TIẾT PHẢI TRẢ NHÀ CUNG CẤP
            </h6>
        </div>
    </div>
    <div class="card-body">
        <button type="button" class="btn btn-primary mb-3" data-toggle="modal" data-target="#myModal"> <i class="fa fa-plus"></i> Thêm hàng hóa</button>
        <div class="table-responsive">
            <table class="table table-bordered" id="table" width="100%" height="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã khách hàng</th>
                        <th>Tên khách hàng</th>
                        <th>Mã CS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td id="row_@item.ID">@item.Ma</td>
                            <td>@item.Ten</td>
                            <td>@item.MaCS</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@using (Html.BeginForm("Create", "DanhMucKhachHang", FormMethod.Post))
{
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog  modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm hàng hóa mới</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <input type="hidden" name="ID" />
                                <label>Danh mục đơn vị:</label>
                                <input type="text" name="IDDanhMucDonVi" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">

                                <label>Danh mục loại đối tượng:</label>
                                <input type="text" name="IDDanhMucLoaiDoiTuong" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Mã :</label>
                                <input type="text" name="Ma" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Tên:</label>
                                <input type="text" name="Ten" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Tên EN:</label>
                                <input type="text" name="TenEN" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Mã CS:</label>
                                <input type="text" name="MaCS" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Địa chỉ:</label>
                                <input type="text" name="DiaChi" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Mã số thuế:</label>
                                <input type="text" name="MaSoThue" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Nhóm:</label>
                                <input type="text" name="Nhom" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Vị trí:</label>
                                <input type="text" name="ViTri" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Ghi chú:</label>
                                <input type="text" name="GhiChu" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Danh mục người sử dụng Create:</label>
                                <input type="text" name="IDDanhMucNguoiSuDungCreate" value="" class="form-control" />
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-group">
                                <label>Danh mục người sử dụng Edit:</label>
                                <input type="text" name="IDDanhMucNguoiSuDungEdit" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Ngày tạo:</label>
                                <input type="date" name="CreateDate" value="" class="form-control" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Ngày sửa</label>
                                <input type="date" name="EditDate" value="" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}
